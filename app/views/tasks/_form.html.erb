<div class='row'>
  <div class='col-xs-12'>
    <div class='col-sm-8'>
      <div class='col-lg-y6'>

<%= form_for(task) do |f| %>

<% if task.errors.any? %>

<div id='error_explanation' >
    <ul>
<% task.errors.full_messages.each do |task| %>
      
      <li>
<%= task %>
      </li>
      
      <% end %>
    </ul>
</div>

<% end %>

  <div class='from-group'>
<%= f.label :status, 'ステータス' %>
  
<%= f.text_field :status, class: 'form-control' %>
  </div>

  <div class='from-group'>
<%= f.label :content, 'タスクの内容' %>
  
<%= f.text_field :content, class: 'form-control' %>
  </div>


<%= f.submit '投稿', class: 'btn btn-primary' %>

<% end %>
      </div>
    </div>
  </div>
</div>